resource "aws_security_group" "allow_ssh_2" {
  name        = "allow_ssh_2"
  description = "Allow all inbound traffic and all outbound traffic"

  tags = {
    Name = "allow_ssh_2"
  }

  ingress {
    from_port        = 22
    to_port          = 22
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  egress {
    from_port        = 0
    to_port          = 0
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }
}
